CADASTRO.PHP

<?php
include ("conexao.php");

$nome = $_POST['nome'];
$cnpj= $_POST['cnpj'];
$email = $_POST['email'];
$senha = $_POST['senha'];


$sql = " INSERT INTO empresa (nome,cnpj,email,senha)
values ('$nome','$cnpj','$email','$senha')";

if (mysqli_query ($conexao,$sql)) {
    header('Location: empresa.html');
 } else {
     echo "erro" . mysqli_connect_error($conexao);
 }

mysqli_close($conexao);
?>

CONEXAO.PHP---------------------------------------------------------------------------------------------------

<?php
$servidor = "localhost";
$usuario = "root";
$senha = "";
$dbname = "face";

$conexao = mysqli_connect($servidor, $usuario, $senha, $dbname);

if (!$conexao) {
    die("Houve um erro: " . mysqli_connect_error());
}

?>

DASHBOARD.PHP-----------------------------------------------------------------------------------------------------

<?php

// Incluindo a conexão
include("conexao.php");


$sql = "SELECT * FROM empresa";

$result = mysqli_query($conexao, $sql);
?>

<div class="tabela">
    <h2>Lista de Empresas</h2>
    <table>
      <tr>
        <th>nome</th>
        <th>cnpj</th>
        <th>email</th>
        <th>senha</th>
       
      
      </tr>
      <?php while($row = mysqli_fetch_assoc($result)) { ?>
        <tr>
          
          <td><?php echo $row['nome']; ?></td>
          <td><?php echo $row['cnpj']; ?></td>
          <td><?php echo $row['email']; ?></td>
          <td><?php echo $row['senha']; ?></td>
      
        
        </tr>
      <?php } ?>
    </table>
  </div>

ATUALIZAR.PHP-------------------------------------------------------------------------------------------------------------------------------

<?php
include("conexao.php");

$id = $_POST['id'];
$nome = $_POST['nome'];
$email= $_POST['email'];
$telefone = $_POST['telefone'];
$senha = $_POST['senha'];

$sql = "UPDATE cadastro SET nome='$nome', email='$email', telefone='$telefone', senha='$senha' WHERE id=$id";

if (mysqli_query($conexao, $sql)) {
    header("Location: dashboard.php");
} else {
    echo "Erro ao atualizar: " . mysqli_error($conexao);
}
?>

EDITAR.PHP---------------------------------------------------------------------------------------------------------------------------------

?php
include("conexao.php");

$id = $_GET['id'];
$sql = "SELECT * FROM cadastro WHERE id = $id";
$result = mysqli_query($conexao, $sql);
$dados = mysqli_fetch_assoc($result);
?>

<h2>Editar Usuário</h2>
<form action="atualizar.php" method="POST">
<!-- O hidden vai esconder o ID do usuário para que não
 seja atualizado pelo usuário na troca de atualização -->
  <input type="hidden" name="id" value="<?php echo $dados['id']; ?>">
  Nome: <input type="text" name="nome" value="<?php echo $dados['nome']; ?>"><br>
  Cnpj: <input type="text" name="cnpj" value="<?php echo $dados['cnpj']; ?>"><br>
  Email: <input type="text" name="email" value="<?php echo $dados['email']; ?>"><br>
  Senha: <input type="text" name="senha" value="<?php echo $dados['senha']; ?>"><br>
  <button type="submit">Atualizar</button>
</form>

EMPRESA.HTML---------------------------------------------------------------------------------------------------------------------------------

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="sricpt.js"></script>
    <title>Cadastro Candidato</title>
</head>
<body>
    <form action="cadastro.php" method="POST">

    <div class="login">
        <label for="nome">Nome da Empresa: </label>
        <input type="text" name="nome"><br>
        <label for="email">Email: </label>
        <input type="text" name="email"><br>
        <label for="senha">Telefone: </label>
        <input type="text" name="telefone"><br>
        <label for="senha">Senha: </label>
        <input type="text" name="senha"><br>
    </div>

<button>Cadastrar</button>

</form>
<button onclick="Visualizar()">Visualizar empresas</button>
<style>

